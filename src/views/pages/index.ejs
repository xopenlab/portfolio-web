<!DOCTYPE html>
<html lang="es" data-color-themes='<%- JSON.stringify(colorThemes) %>' data-default-theme="<%= defaultTheme %>">
<head>
  <%- include('../partials/head', { title }) %>
</head>
<body class="<%= pageState %> antialiased" x-data x-cloak>
  <!-- Header/Navigation -->
  <%- include('../partials/header', { pageState }) %>

  <!-- Page Transition Wrapper -->
  <div class="page-transition-wrapper">
    <!-- Main Content -->
    <main class="landing-container-artistic" x-data="heroReveal">
      <!-- Imagen revelada con clip-path al hacer hover en el nombre -->
      <div class="hero-image-reveal" :class="{ 'is-revealed': imageRevealed }">
        <img src="/assets/images/self_craft.png" alt="" aria-hidden="true">
      </div>

      <div class="landing-content">
        <!-- Columna izquierda: Nombre y título -->
        <div class="landing-left">
          <h1 class="name-artistic" @mouseenter="revealImage()" @mouseleave="hideImage()" @touchstart.prevent="toggleImage()">
            <span class="name-line">Josevi</span>
            <span class="name-line">Pérez</span>
          </h1>
          <p class="title-artistic">Programador Web Senior</p>
        </div>

        <!-- Columna derecha: Navegación -->
        <nav class="nav-artistic">
          <a href="/perfil" class="nav-link-artistic">
            <span class="link-number">01</span>
            <span class="link-text">Perfil</span>
          </a>
          <a href="/proyectos" class="nav-link-artistic">
            <span class="link-number">02</span>
            <span class="link-text">Proyectos</span>
          </a>
          <a href="/contacto" class="nav-link-artistic">
            <span class="link-number">03</span>
            <span class="link-text">Contacto</span>
          </a>
        </nav>
      </div>

      <!-- Elementos decorativos -->
      <%- include('../partials/components/decorative-borders') %>
    </main>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Banner de Cookies -->
  <%- include('../partials/cookie-banner') %>

  <!-- Cortina de transición entre páginas -->
  <%- include('../partials/components/page-curtain') %>

  <!-- Easter egg: Tetris -->
  <script src="/js/tetris.js"></script>

  <!-- Scripts: Los stores deben cargarse ANTES de Alpine.js -->
  <script src="/js/alpine-setup.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.15.1/dist/cdn.min.js"></script>
  <script type="module" src="/js/main.js"></script>

  <!-- Animaciones del nombre con Anime.js (solo para landing) -->
  <script type="module">
    import { initNameAnimations } from '/js/name-animation.js';
    initNameAnimations();
  </script>
</body>
</html>
