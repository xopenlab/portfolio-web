<!-- Navegaci칩n para p치ginas internas -->
<nav class="internal-navigation"
  x-data="internalNav"
  :class="{ 'is-glass': scrolled }"
  :style="$store.panel.current ? 'z-index: 0; pointer-events: none' : ''"
  aria-label="Navegaci칩n principal">
  <a href="/" class="nav-home" aria-label="Volver a inicio" title="Inicio (Esc)">
    <svg class="nav-home-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 12H5M12 19l-7-7 7-7"/>
    </svg>
  </a>

  <div class="nav-links">
    <a href="/perfil" class="<%= typeof pageState !== 'undefined' && pageState.includes('perfil') ? 'active' : '' %>">
      <span class="nav-number">01</span>
      <span class="nav-text">Perfil</span>
    </a>
    <a href="/proyectos" class="<%= typeof pageState !== 'undefined' && pageState.includes('proyectos') ? 'active' : '' %>">
      <span class="nav-number">02</span>
      <span class="nav-text">Proyectos</span>
    </a>
    <a href="/contacto" class="<%= typeof pageState !== 'undefined' && pageState.includes('contacto') ? 'active' : '' %>">
      <span class="nav-number">03</span>
      <span class="nav-text">Contacto</span>
    </a>
  </div>

  <!-- Controles de tema: solo visibles en landscape m칩vil -->
  <div class="nav-theme-controls">
    <%- include('./theme-selector') %>
    <button
      @click="$store.theme.toggle()"
      class="nav-theme-toggle"
      aria-label="Cambiar tema"
      type="button">
      <svg x-show="!$store.theme.isDark" x-cloak width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
      </svg>
      <svg x-show="$store.theme.isDark" x-cloak width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </button>
  </div>
</nav>
