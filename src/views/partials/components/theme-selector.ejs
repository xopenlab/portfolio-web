<!-- Selector de temas de color (6 paletas) - DiseÃ±o minimalista -->
<div class="theme-selector-minimal" x-data x-init="$store.colorTheme.init()">
  <% Object.entries(colorThemes).forEach(([name, theme]) => { %>
    <button
      @click="$store.colorTheme.setTheme('<%= name %>')"
      class="theme-bar"
      :class="{ 'active': $store.colorTheme.current === '<%= name %>' }"
      style="background-color: <%= theme.primary %>"
      aria-label="<%= theme.label %>"
      title="<%= theme.label %>">
    </button>
  <% }) %>
</div>
