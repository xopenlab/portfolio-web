<section id="contact" class="section gradient-bg-reverse">
  <div class="container mx-auto max-w-6xl">
    <h2 class="section-title">Contacto</h2>
    <p class="section-subtitle">¿Tienes un proyecto en mente? Hablemos</p>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Información de contacto -->
      <div class="animate-on-scroll">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Información de contacto
        </h3>
        
        <div class="space-y-6">
          <!-- Email -->
          <div class="flex items-start">
            <div class="shrink-0 w-12 h-12 rounded-lg bg-primary-100 dark:bg-primary-900/30
                        flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">Email</h4>
              <a href="mailto:<%= data.personalInfo.email %>"
                 class="text-primary-600 dark:text-primary-400 hover:underline">
                <%= data.personalInfo.email %>
              </a>
            </div>
          </div>

          <!-- Ubicación -->
          <div class="flex items-start">
            <div class="shrink-0 w-12 h-12 rounded-lg bg-secondary-100 dark:bg-secondary-900/30
                        flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-secondary-600 dark:text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">Ubicación</h4>
              <p class="text-gray-600 dark:text-gray-400">
                <%= data.personalInfo.location %>
              </p>
            </div>
          </div>

          <!-- LinkedIn -->
          <div class="flex items-start">
            <div class="shrink-0 w-12 h-12 rounded-lg bg-primary-100 dark:bg-primary-900/30
                        flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">LinkedIn</h4>
              <a href="<%= data.personalInfo.linkedin %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="text-primary-600 dark:text-primary-400 hover:underline">
                Ver perfil
              </a>
            </div>
          </div>

          <!-- GitHub -->
          <div class="flex items-start">
            <div class="shrink-0 w-12 h-12 rounded-lg bg-secondary-100 dark:bg-secondary-900/30
                        flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-secondary-600 dark:text-secondary-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">GitHub</h4>
              <a href="<%= data.personalInfo.github %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="text-primary-600 dark:text-primary-400 hover:underline">
                @jperegir
              </a>
            </div>
          </div>
        </div>

        <!-- Disponibilidad -->
        <div class="mt-8 p-6 rounded-xl bg-linear-to-r from-primary-50 to-secondary-50
                    dark:from-primary-900/20 dark:to-secondary-900/20 border-2 border-primary-200
                    dark:border-primary-800">
          <div class="flex items-center mb-3">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-3 animate-pulse"></div>
            <h4 class="font-semibold text-gray-900 dark:text-white">Disponible para proyectos</h4>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Actualmente abierto a nuevas oportunidades y colaboraciones interesantes.
          </p>
        </div>
      </div>

      <!-- Formulario de contacto -->
      <div class="animate-on-scroll animation-delay-200">
        <div class="card">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Envíame un mensaje
          </h3>

          <form 
            x-data="contactForm()"
            @submit.prevent="submitForm"
            class="space-y-6"
          >
            <!-- Nombre -->
            <div>
              <label for="name" class="form-label">
                Nombre completo *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                x-model="formData.name"
                required
                minlength="3"
                class="form-input form-field-valid form-field-invalid animate-fade-in-up"
                placeholder="Tu nombre"
              >
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="form-label">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                x-model="formData.email"
                required
                class="form-input form-field-valid form-field-invalid animate-fade-in-up"
                style="animation-delay: 0.1s"
                placeholder="tu@email.com"
              >
            </div>

            <!-- Teléfono (opcional) -->
            <div>
              <label for="phone" class="form-label">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                x-model="formData.phone"
                class="form-input optional:border-dashed optional:bg-gray-50 dark:optional:bg-gray-800 animate-fade-in-up"
                style="animation-delay: 0.2s"
                placeholder="+34 XXX XXX XXX (opcional)"
              >
            </div>

            <!-- Mensaje -->
            <div>
              <label for="message" class="form-label">
                Mensaje *
              </label>
              <textarea
                id="message"
                name="message"
                x-model="formData.message"
                required
                minlength="10"
                rows="5"
                class="form-input resize-none form-field-valid form-field-invalid animate-fade-in-up"
                style="animation-delay: 0.3s"
                placeholder="Cuéntame sobre tu proyecto..."
              ></textarea>
            </div>

            <!-- Botón de envío -->
            <button 
              type="submit"
              :disabled="loading"
              :class="loading ? 'opacity-50 cursor-not-allowed' : ''"
              class="w-full btn-primary flex items-center justify-center"
            >
              <span x-show="!loading">Enviar mensaje</span>
              <span x-show="loading" class="flex items-center">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Enviando...
              </span>
            </button>

            <!-- Mensaje de éxito -->
            <div 
              x-show="success" 
              x-transition
              class="p-4 rounded-lg bg-green-100 dark:bg-green-900/30 border border-green-300 dark:border-green-700"
            >
              <p class="text-green-800 dark:text-green-200 text-sm">
                ✓ Mensaje enviado correctamente. Te responderé pronto.
              </p>
            </div>

            <!-- Mensaje de error -->
            <div 
              x-show="error" 
              x-transition
              class="p-4 rounded-lg bg-red-100 dark:bg-red-900/30 border border-red-300 dark:border-red-700"
            >
              <p class="text-red-800 dark:text-red-200 text-sm">
                ✗ Error al enviar el mensaje. Inténtalo de nuevo.
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  /**
   * Alpine.js component para el formulario de contacto
   * Maneja validación, envío y estados del formulario
   */
  function contactForm() {
    return {
      formData: {
        name: '',
        email: '',
        phone: '',
        message: ''
      },
      loading: false,
      success: false,
      error: false,

      /**
       * Envía el formulario de contacto
       */
      async submitForm() {
        this.loading = true;
        this.success = false;
        this.error = false;

        try {
          const response = await fetch('/contact', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(this.formData)
          });

          const data = await response.json();

          if (data.success) {
            this.success = true;
            // Resetear formulario
            this.formData = { name: '', email: '', phone: '', message: '' };

            // Ocultar mensaje de éxito después de 5 segundos
            setTimeout(() => {
              this.success = false;
            }, 5000);
          } else {
            this.error = true;
            // Ocultar mensaje de error después de 5 segundos
            setTimeout(() => {
              this.error = false;
            }, 5000);
          }
        } catch (err) {
          console.error('Error al enviar formulario:', err);
          this.error = true;
          setTimeout(() => {
            this.error = false;
          }, 5000);
        } finally {
          this.loading = false;
        }
      }
    }
  }
</script>