<section id="experience" class="section bg-white dark:bg-gray-900">
  <div class="container mx-auto max-w-5xl">
    <h2 class="section-title">Experiencia Profesional</h2>
    <p class="section-subtitle">Mi trayectoria laboral en el desarrollo de software</p>

    <div class="relative">
      <!-- LÃ­nea vertical del timeline -->
      <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary-500 to-secondary-500 transform md:-translate-x-1/2"></div>

      <div class="space-y-12">
        <% data.experience.forEach((job, index) => { %>
          <div class="relative animate-on-scroll <%= index % 2 === 0 ? 'md:pr-1/2' : 'md:pl-1/2' %>">
            <!-- Punto en la lÃ­nea del timeline -->
            <div class="absolute left-0 md:left-1/2 top-0 w-4 h-4 rounded-full 
                        <%= job.current ? 'bg-primary-600 ring-4 ring-primary-200 dark:ring-primary-800 animate-pulse' : 'bg-gray-400 dark:bg-gray-600' %>
                        transform md:-translate-x-1/2 z-10"></div>

            <!-- Card de experiencia -->
            <div class="ml-8 md:ml-0 <%= index % 2 === 0 ? 'md:mr-8' : 'md:ml-8' %>">
              <div class="card <%= job.current ? 'ring-2 ring-primary-500' : '' %>">
                <!-- Badge de estado actual -->
                <% if (job.current) { %>
                  <div class="absolute -top-3 left-6">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold 
                                 bg-primary-600 text-white shadow-lg">
                      <span class="w-2 h-2 bg-white rounded-full mr-2 animate-pulse"></span>
                      Actualidad
                    </span>
                  </div>
                <% } %>

                <!-- AÃ±o -->
                <div class="mb-3">
                  <span class="inline-block px-4 py-1.5 rounded-full text-sm font-bold
                               bg-gradient-to-r from-primary-100 to-secondary-100 
                               dark:from-primary-900 dark:to-secondary-900
                               text-primary-800 dark:text-primary-200">
                    <%= job.year %>
                  </span>
                </div>

                <!-- Puesto -->
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                  <%= job.position %>
                </h3>

                <!-- Empresa con logo -->
                <div class="flex items-center gap-3 mb-4">
                  <% if (job.logo) { %>
                    <div class="shrink-0 w-12 h-12 rounded-lg overflow-hidden bg-white p-1.5 shadow-sm border border-gray-200 dark:border-gray-700">
                      <img
                        src="<%= job.logo %>"
                        alt="Logo <%= job.company %>"
                        class="w-full h-full object-contain"
                        loading="lazy"
                      />
                    </div>
                  <% } %>
                  <span class="text-lg font-semibold text-gray-700 dark:text-gray-300">
                    <%= job.company %>
                  </span>
                </div>

                <!-- TecnologÃ­as utilizadas (ejemplo) -->
                <% if (index === 0 || index === 1) { %>
                  <div class="flex flex-wrap gap-2 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <% if (index === 0) { %>
                      <span class="badge text-xs">Node.js</span>
                      <span class="badge text-xs">Express</span>
                      <span class="badge text-xs">Vue.js</span>
                      <span class="badge text-xs">SQL Server</span>
                      <span class="badge text-xs">Docker</span>
                    <% } else { %>
                      <span class="badge text-xs">Node.js</span>
                      <span class="badge text-xs">JavaScript</span>
                      <span class="badge text-xs">REST API</span>
                      <span class="badge text-xs">MySQL</span>
                    <% } %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Resumen de experiencia -->
    <div class="mt-16 grid md:grid-cols-3 gap-6 animate-on-scroll">
      <div class="card text-center">
        <div class="text-4xl mb-3">ðŸ’¼</div>
        <div class="text-3xl font-bold gradient-text mb-2">5</div>
        <p class="text-gray-600 dark:text-gray-400">Empresas diferentes</p>
      </div>
      <div class="card text-center">
        <div class="text-4xl mb-3">ðŸ“ˆ</div>
        <div class="text-3xl font-bold gradient-text mb-2">7+</div>
        <p class="text-gray-600 dark:text-gray-400">AÃ±os de experiencia</p>
      </div>
      <div class="card text-center">
        <div class="text-4xl mb-3">ðŸŽ¯</div>
        <div class="text-3xl font-bold gradient-text mb-2">3</div>
        <p class="text-gray-600 dark:text-gray-400">Sectores industriales</p>
      </div>
    </div>
  </div>
</section>