<section id="projects" class="section bg-white dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <h2 class="section-title">Proyectos Destacados</h2>
    <p class="section-subtitle">Soluciones desarrolladas para diferentes industrias</p>

    <!-- Proyectos principales -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <% data.projects.featured.slice(0, 6).forEach((project, index) => { %>
        <div class="card animate-on-scroll" style="animation-delay: <%= index * 0.1 %>s">
          <!-- Icono del proyecto y Logo de la empresa -->
          <div class="flex items-center gap-3 mb-4">
            <!-- Icono del proyecto -->
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center shrink-0">
              <% if (project.title.toLowerCase().includes('api')) { %>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              <% } else if (project.title.toLowerCase().includes('web')) { %>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
              <% } else if (project.title.toLowerCase().includes('plataforma')) { %>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              <% } else { %>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                </svg>
              <% } %>
            </div>

            <!-- Logo de la empresa -->
            <% if (project.logo) { %>
              <div class="w-12 h-12 rounded overflow-hidden bg-white p-1.5 border border-gray-200 dark:border-gray-700">
                <img
                  src="<%= project.logo %>"
                  alt="Logo <%= project.company %>"
                  class="w-full h-full object-contain"
                  loading="lazy"
                />
              </div>
            <% } %>
          </div>

          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 line-clamp-2">
            <%= project.title %>
          </h3>

          <div class="flex flex-wrap gap-2 mt-auto">
            <% if (project.title.toLowerCase().includes('api')) { %>
              <span class="badge text-xs">REST API</span>
              <span class="badge text-xs">Node.js</span>
            <% } else if (project.title.toLowerCase().includes('web')) { %>
              <span class="badge text-xs">Web App</span>
              <span class="badge text-xs">Express</span>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Lista completa de proyectos -->
    <div 
      x-data="{ expanded: false }"
      class="animate-on-scroll"
    >
      <div 
        x-show="!expanded"
        class="text-center"
      >
        <button 
          @click="expanded = true"
          class="btn-primary"
        >
          Ver más proyectos
          <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
      </div>

      <div 
        x-show="expanded"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform -translate-y-4"
        x-transition:enter-end="opacity-100 transform translate-y-0"
        class="space-y-4"
      >
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
          Todos los proyectos
        </h3>
        
        <div class="grid gap-3">
          <% data.projects.featured.forEach((project, index) => { %>
            <div class="card flex items-center p-4 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
              <!-- Logo de la empresa -->
              <% if (project.logo) { %>
                <div class="shrink-0 w-16 h-16 rounded overflow-hidden bg-white p-2 border border-gray-200 dark:border-gray-700 mr-4">
                  <img
                    src="<%= project.logo %>"
                    alt="Logo <%= project.company %>"
                    class="w-full h-full object-contain"
                    loading="lazy"
                  />
                </div>
              <% } else { %>
                <div class="shrink-0 w-2 h-2 rounded-full bg-primary-500 mr-4"></div>
              <% } %>
              <div class="flex-1">
                <p class="text-gray-700 dark:text-gray-300 font-medium"><%= project.title %></p>
                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1"><%= project.company %></p>
              </div>
            </div>
          <% }); %>
        </div>

        <div class="text-center mt-6">
          <button 
            @click="expanded = false"
            class="btn-secondary"
          >
            Ver menos
            <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Librerías utilizadas -->
    <div class="mt-16 animate-on-scroll">
      <h3 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-8">
        Librerías y Herramientas
      </h3>
      
      <div class="card">
        <div class="flex flex-wrap justify-center gap-3">
          <% data.projects.libraries.forEach((library) => { %>
            <span class="px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 
                         text-gray-700 dark:text-gray-300 font-medium
                         hover:bg-primary-100 dark:hover:bg-primary-900/30 
                         hover:text-primary-700 dark:hover:text-primary-300
                         transition-all duration-200 cursor-default">
              <%= library %>
            </span>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</section>